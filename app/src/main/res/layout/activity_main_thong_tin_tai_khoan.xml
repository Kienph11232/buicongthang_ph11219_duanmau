<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityThongTinTaiKhoan"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHoVaTenThongTinTaiKhoan"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="Họ và tên"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgEditHoVaTenThongTinTaiKhoan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit" />
        </LinearLayout>

        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/tvPassWordThongTinTaiKhoan"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Mật khẩu"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvEmailThongTinTaiKhoan"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="Email"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgEditEmailThongTinTaiKhoan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSoDienThoaiThongTinTaiKhoan"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="Số điện thoại"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgEditSoDienThoaiThongTinTaiKhoan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNgaySinhThongTinTaiKhoan"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="Ngày sinh"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgEditNgaySinhThongTinTaiKhoan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvGioiTinhThongTinTaiKhoan"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="Email"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgEditGioiTinhThongTinTaiKhoan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/edit" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>